{
  "name": "@a5c/events",
  "version": "0.1.0",
  "private": true,
  "description": "Events SDK and CLI to normalize and enrich repository and CI/CD events for agentic workflows.",
  "bin": {
    "events": "dist/cli.js"
  },
  "type": "module",
  "scripts": {
    "preinstall": "node -e \"process.exit(0)\"",
    "prepare": "husky install || true",
    "dev:setup": "bash ./scripts/dev-setup.sh",
    "build": "tsc -p tsconfig.json && node ./scripts/build-post.js || true",
    "test": "node -e \"console.log('no tests yet')\"",
    "lint": "eslint . --ext .ts --max-warnings=0 || true",
    "format": "prettier -w .",
    "start": "node dist/cli.js",
    "dev": "tsx src/cli.ts",
    "check": "npm run build && npm test"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "@types/yargs": "^17.0.33",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.6",
    "prettier": "^3.3.3",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2"
  }
}

