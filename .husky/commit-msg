#!/usr/bin/env sh

# Validate commit message using commitlint if available
if command -v npx >/dev/null 2>&1; then
  npx --yes commitlint --edit "$1" || {
    echo "\033[31mCommit message does not follow Conventional Commits.\033[0m" >&2
    echo "See docs/contributing/git-commits.md for details." >&2
    exit 1
  }
else
  echo "npx not found; skipping commit message lint."
fi
