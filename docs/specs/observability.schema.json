{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/a5c-ai/events/docs/specs/observability.schema.json",
  "title": "a5c Observability Artifact (v0.1)",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "schema_version": { "type": "string", "const": "0.1" },
    "repo": { "type": "string" },
    "workflow": { "type": "string" },
    "job": { "type": "string" },
    "run": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "id": { "oneOf": [{ "type": "string" }, { "type": "integer" }] },
        "attempt": { "type": "integer", "minimum": 1 },
        "sha": { "type": "string" },
        "ref": { "type": "string" },
        "actor": { "type": "string" },
        "event_name": { "type": "string" },
        "conclusion": { "type": "string" },
        "started_at": { "type": "string", "format": "date-time" },
        "completed_at": { "type": "string", "format": "date-time" },
        "duration_ms": { "type": ["integer", "null"], "minimum": 0 }
      },
      "required": [
        "id",
        "attempt",
        "sha",
        "ref",
        "actor",
        "event_name",
        "conclusion",
        "started_at",
        "completed_at"
      ]
    },
    "metrics": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "coverage": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "total": { "type": "object" }
          },
          "required": ["total"]
        },
        "cache": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "entries": {
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "kind": { "type": "string" },
                  "hit": { "type": "boolean" },
                  "bytes": { "type": "integer", "minimum": 0 },
                  "key": { "type": "string" }
                },
                "required": ["kind", "hit"]
              }
            },
            "summary": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "hits": { "type": "integer", "minimum": 0 },
                "misses": { "type": "integer", "minimum": 0 },
                "total": { "type": "integer", "minimum": 0 },
                "hit_ratio": { "type": ["number", "null"], "minimum": 0 },
                "bytes_restored_total": {
                  "type": ["integer", "null"],
                  "minimum": 0
                }
              },
              "required": ["hits", "misses", "total"]
            }
          },
          "required": ["entries", "summary"]
        }
      },
      "minProperties": 1
    },
    "tests": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "totals": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "total": { "type": "integer", "minimum": 0 },
            "flaky": { "type": "integer", "minimum": 0 },
            "slow_count": { "type": "integer", "minimum": 0 }
          },
          "required": ["total"]
        },
        "slowest": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "fullName": { "type": "string" },
              "status": { "type": "string" },
              "duration_ms": { "type": ["integer", "null"], "minimum": 0 },
              "retries": { "type": ["integer", "null"], "minimum": 0 }
            }
          }
        },
        "flaky": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "fullName": { "type": "string" },
              "status": { "type": "string" },
              "duration_ms": { "type": ["integer", "null"], "minimum": 0 },
              "retries": { "type": ["integer", "null"], "minimum": 0 }
            }
          }
        }
      }
    }
  },
  "required": ["schema_version", "repo", "workflow", "job", "run"]
}
