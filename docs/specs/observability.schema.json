{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://a5c.ai/schemas/observability-0.1.json",
  "title": "Observability Artifact v0.1",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "schema_version": { "type": ["string", "number"], "default": "0.1" },
    "repo": { "type": "string" },
    "workflow": { "type": "string" },
    "job": { "type": "string" },
    "run": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "id": { "type": ["string", "number"] },
        "attempt": { "type": "number" },
        "sha": { "type": "string" },
        "ref": { "type": "string" },
        "actor": { "type": "string" },
        "event_name": { "type": "string" },
        "conclusion": { "type": "string" },
        "started_at": { "type": ["string", "null"], "format": "date-time" },
        "completed_at": { "type": ["string", "null"], "format": "date-time" },
        "duration_ms": { "type": ["number", "null"] }
      },
      "required": ["id", "attempt", "sha", "ref"]
    },
    "metrics": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "coverage": {
          "type": ["object", "null"],
          "additionalProperties": true,
          "properties": {
            "total": {
              "type": ["object", "null"],
              "additionalProperties": true,
              "properties": {
                "lines": { "$ref": "#/$defs/coverageMetric" },
                "functions": { "$ref": "#/$defs/coverageMetric" },
                "branches": { "$ref": "#/$defs/coverageMetric" },
                "statements": { "$ref": "#/$defs/coverageMetric" }
              }
            }
          }
        },
        "cache": {
          "type": ["object", "null"],
          "additionalProperties": true,
          "properties": {
            "entries": {
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": true,
                "properties": {
                  "kind": { "type": "string" },
                  "hit": { "type": "boolean" },
                  "bytes": { "type": ["number", "null"] },
                  "key": { "type": ["string", "null"] }
                },
                "required": ["kind", "hit"]
              }
            },
            "summary": {
              "type": ["object", "null"],
              "additionalProperties": true,
              "properties": {
                "hits": { "type": "number" },
                "misses": { "type": "number" },
                "total": { "type": "number" },
                "bytes_restored_total": { "type": ["number", "null"] }
              }
            }
          }
        }
      }
    }
  },
  "required": ["repo", "workflow", "job", "run"],
  "$defs": {
    "coverageMetric": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "pct": { "type": "number" },
        "covered": { "type": "number" },
        "total": { "type": "number" }
      }
    }
  }
}
