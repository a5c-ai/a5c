{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://a5c.ai/schemas/observability.schema.v0.1.json",
  "title": "a5c Observability Artifact (v0.1)",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "repo", "workflow", "job", "run", "metrics"],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "0.1",
      "description": "Schema version string for compatibility and migrations."
    },
    "repo": { "type": "string", "minLength": 1 },
    "workflow": { "type": "string", "minLength": 1 },
    "job": { "type": "string", "minLength": 1 },
    "run": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "attempt",
        "sha",
        "ref",
        "actor",
        "event_name",
        "conclusion",
        "completed_at"
      ],
      "properties": {
        "id": { "oneOf": [{ "type": "integer" }, { "type": "string" }] },
        "attempt": { "type": "integer", "minimum": 1 },
        "sha": { "type": "string", "pattern": "^[a-f0-9]{40}$" },
        "ref": { "type": "string" },
        "actor": { "type": "string" },
        "event_name": { "type": "string" },
        "conclusion": { "type": "string" },
        "started_at": { "type": "string", "format": "date-time" },
        "completed_at": { "type": "string", "format": "date-time" },
        "duration_ms": { "type": ["integer", "null"], "minimum": 0 }
      }
    },
    "metrics": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "coverage": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "total": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "lines": { "$ref": "#/$defs/covStat" },
                "functions": { "$ref": "#/$defs/covStat" },
                "branches": { "$ref": "#/$defs/covStat" },
                "statements": { "$ref": "#/$defs/covStat" }
              }
            }
          }
        },
        "cache": {
          "type": ["object", "null"],
          "additionalProperties": false,
          "properties": {
            "entries": {
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "required": ["kind", "hit"],
                "properties": {
                  "kind": { "type": "string" },
                  "hit": { "type": "boolean" },
                  "key": { "type": "string" },
                  "bytes": { "type": "integer", "minimum": 0 }
                }
              }
            },
            "summary": {
              "type": "object",
              "additionalProperties": false,
              "required": ["hits", "misses", "total"],
              "properties": {
                "hits": { "type": "integer", "minimum": 0 },
                "misses": { "type": "integer", "minimum": 0 },
                "total": { "type": "integer", "minimum": 0 },
                "hit_ratio": {
                  "type": ["number", "null"],
                  "minimum": 0,
                  "maximum": 1
                },
                "bytes_restored_total": {
                  "type": ["integer", "null"],
                  "minimum": 0
                }
              }
            }
          }
        }
      }
    }
  },
  "$defs": {
    "covStat": {
      "type": "object",
      "additionalProperties": false,
      "required": ["pct", "covered", "total"],
      "properties": {
        "pct": { "type": "number", "minimum": 0, "maximum": 100 },
        "covered": { "type": "integer", "minimum": 0 },
        "total": { "type": "integer", "minimum": 0 }
      }
    }
  }
}
