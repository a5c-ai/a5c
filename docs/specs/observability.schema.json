{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://a5c.ai/schemas/observability-0.1.json",
  "title": "a5c Observability Artifact",
  "description": "Schema for observability.json emitted by CI workflows and composite actions (schema_version 0.1)",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "description": "Optional self-declared meta schema reference",
      "type": "string",
      "format": "uri"
    },
    "schema_version": {
      "type": "string",
      "enum": ["0.1"]
    },
    "repo": { "type": "string", "minLength": 1 },
    "workflow": { "type": "string", "minLength": 1 },
    "job": { "type": "string", "minLength": 1 },
    "run": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "id": { "oneOf": [{ "type": "integer" }, { "type": "string" }] },
        "attempt": { "type": "integer", "minimum": 1 },
        "sha": { "type": "string", "pattern": "^[a-f0-9]{40}$" },
        "ref": { "type": "string", "minLength": 1 },
        "actor": { "type": "string" },
        "event_name": { "type": "string" },
        "conclusion": { "type": "string" },
        "started_at": { "type": "string", "format": "date-time" },
        "completed_at": { "type": "string", "format": "date-time" },
        "duration_ms": { "type": ["number", "null"], "minimum": 0 }
      },
      "required": [
        "id",
        "attempt",
        "sha",
        "ref",
        "actor",
        "event_name",
        "completed_at"
      ]
    },
    "metrics": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "coverage": {
          "description": "Vitest/Istanbul coverage summary JSON or compatible shape",
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "total": {
              "type": "object",
              "additionalProperties": true,
              "properties": {
                "lines": { "$ref": "#/$defs/coverageItem" },
                "functions": { "$ref": "#/$defs/coverageItem" },
                "branches": { "$ref": "#/$defs/coverageItem" },
                "statements": { "$ref": "#/$defs/coverageItem" }
              }
            }
          }
        },
        "cache": {
          "type": ["object", "null"],
          "additionalProperties": false,
          "properties": {
            "entries": {
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "kind": { "type": "string" },
                  "hit": { "type": "boolean" },
                  "key": { "type": "string" },
                  "bytes": { "type": "number" }
                },
                "required": ["kind", "hit"]
              }
            },
            "summary": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "hits": { "type": "number" },
                "misses": { "type": "number" },
                "total": { "type": "number" },
                "hit_ratio": { "type": "number" },
                "bytes_restored_total": { "type": "number" }
              },
              "required": ["hits", "misses", "total"]
            }
          },
          "required": ["entries", "summary"]
        }
      },
      "required": []
    }
  },
  "required": ["schema_version", "repo", "workflow", "job", "run"],
  "$defs": {
    "coverageItem": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "pct": { "type": "number" },
        "covered": { "type": "number" },
        "total": { "type": "number" }
      },
      "required": ["pct", "covered", "total"]
    }
  }
}
